package etats;

import commandes.CommandeDéjàPayéeEx;
import commandes.CommandeNonLivrableEx;
import commandes.CommandeNonRemboursableEx;

public class Livrée {

	public Livrée(int numero) {
		super(numero);
		// TODO Auto-generated constructor stub
	}

	public int getNuméro() {
		return numero;
	}
	
	@Override
	public ACommande payer() {
		throw new CommandeDéjàPayéeEx();
	}

	@Override
	public ACommande livrer() {
		throw new CommandeNonLivrableEx();
	}

	@Override
	public ACommande rembourser() {
		throw new CommandeNonRemboursableEx ();
	}

	@Override
	String getEtat() {
		return "Livrée";
	}

}
