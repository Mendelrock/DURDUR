package commandes;

import java.util.GregorianCalendar;

public class EtatCommande {

	protected int numero;
	protected GregorianCalendar dateLiv = null;
	protected boolean payee = false;

	public EtatCommande() {
		super();
	}

	public void payer() {
		if (payee)
			throw new CommandeDéjàPayéeEx();
		this.payee = true;
	}

	public void livrer() {
		if (! this.payee)
			throw new CommandeNonLivrableEx();
		this.dateLiv = new GregorianCalendar();
	}

	public void rembourser() {
		if (! this.payee || this.dateLiv != null)
			throw new CommandeNonRemboursableEx ();
		this.payee = false;
	}

}