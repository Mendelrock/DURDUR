package commandes;

import java.util.GregorianCalendar;

public abstract class ACommande {
	
	private int numero;
	private GregorianCalendar dateLiv = null;
	private boolean payee = false;
	
	public int getNuméro() {
		return numero;
	}
	
	public ACommande(int numero) {
		this.numero = numero;
		this.payee = false;
	}
	
	abstract String getEtat();
	
	abstract void payer();

	abstract void livrer();

	abstract void rembourser();

}