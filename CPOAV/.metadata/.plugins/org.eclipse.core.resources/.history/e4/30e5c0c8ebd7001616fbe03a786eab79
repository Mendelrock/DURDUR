package operations;

import arithmétique.IOperation;
import arithmétique.Variable;

public class Opération implements IOperation {
	private char opérateur;
	private Variable gauche;
	private Variable droite;
	
	public Opération(char opérateur, Variable gauche, Variable droite) { 
		this.opérateur = opérateur;
		this.gauche = gauche;
		this.droite = droite;
	}
	
	/* (non-Javadoc)
	 * @see arithmétique.IOperation#eval()
	 */
	@Override
	public double eval() {
		if (opérateur == '+')
			return gauche.eval() + droite.eval();
		else assert false : "opération inconnue";
		return 0.;
	}
}