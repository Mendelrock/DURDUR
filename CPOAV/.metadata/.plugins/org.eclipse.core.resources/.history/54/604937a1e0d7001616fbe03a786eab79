package etats;

import java.util.GregorianCalendar;

import commandes.ACommande;
import commandes.CommandeDéjàPayéeEx;

public class Payée extends ACommande{

	public Payée(int numero) {
		super(numero);
	}
	
	public Payée(ACommande old) {
		super(old);
	}

	@Override
	public ACommande payer() {
		throw new CommandeDéjàPayéeEx();
	}

	@Override
	public ACommande livrer() {
		this.dateLiv = new GregorianCalendar();
		return new Livrée(this);
	}

	@Override
	public ACommande rembourser() {
		return new NonPayée(this);
	}

	@Override
	String getEtat() {
		return  "Payée";
	}

}
