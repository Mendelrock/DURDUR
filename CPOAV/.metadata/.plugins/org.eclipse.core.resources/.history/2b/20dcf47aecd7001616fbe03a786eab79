package operations;

import arithmétique.IOperation;
import variables.Variable;

public class Opération implements IOperation {
	private char opérateur;
	private IOperation gauche;
	private IOperation droite;
	
	public Opération(char opérateur, IOperation gauche, IOperation droite) { 
		this.opérateur = opérateur;
		this.gauche = gauche;
		this.droite = droite;
	}
	
	/* (non-Javadoc)
	 * @see arithmétique.IOperation#eval()
	 */
	@Override
	public double eval() {
		if (opérateur == '+')
			return gauche.eval() + droite.eval();
		else assert false : "opération inconnue";
		return 0.;
	}
}