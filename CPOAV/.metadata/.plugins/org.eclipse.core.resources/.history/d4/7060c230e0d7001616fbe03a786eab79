package commandes;

import java.util.GregorianCalendar;

public abstract class ACommande {
	
	private int numero;
	protected GregorianCalendar dateLiv = null;
	protected boolean payee = false;
	
	public int getNuméro() {
		return numero;
	}
	
	public ACommande(int numero) {
		this.numero = numero;
		this.payee = false;
	}
	
	public ACommande(ACommande old){
		this.numero=old.numero;
		this.dateLiv=old.dateLiv;
		this.payee=old.payee;
	}
	
	abstract String getEtat();
	
	abstract ACommande payer();

	abstract ACommande livrer();

	abstract ACommande rembourser();

}