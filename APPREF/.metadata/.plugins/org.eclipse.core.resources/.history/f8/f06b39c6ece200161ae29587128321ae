package outilserveur;

import java.net.Socket;

public class ServiceManager {

	
	// attribut static Class
	
	private static Class<? extends Service> classe;
	
	// méthode statique init
	
	public static void init(Class<? extends Service> initclasse){
		classe=initclasse;
	}
	
	// méthode statique newService
	
	public static Service newService(Socket client_socket) throws InstantiationException, IllegalAccessException {	
		return classe.newInstance();
	}
}
